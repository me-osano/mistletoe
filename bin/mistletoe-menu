  *Docker*) present_terminal mistletoe-install-docker-dbs ;;
  *JavaScript*) show_install_javascript_menu ;;
  *Go*) present_terminal "mistletoe-install-dev-env go" ;;
  *PHP*) show_install_php_menu ;;
  *Python*) present_terminal "mistletoe-install-dev-env python" ;;
  *Elixir*) show_install_elixir_menu ;;
  *Zig*) present_terminal "mistletoe-install-dev-env zig" ;;
  *Rust*) present_terminal "mistletoe-install-dev-env rust" ;;
  *Java*) present_terminal "mistletoe-install-dev-env java" ;;
  *NET*) present_terminal "mistletoe-install-dev-env dotnet" ;;
  *OCaml*) present_terminal "mistletoe-install-dev-env ocaml" ;;
