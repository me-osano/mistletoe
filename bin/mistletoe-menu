show_update_menu() {
  case $(menu "Update" " Mistletoe\n  Config\n󰸌  Extra Themes\n  Process\n󰇅  Hardware\n  Firmware\n  Password\n  Timezone\n  Time") in
  *Mistletoe*) present_terminal mistletoe-update ;;
  *Config*) show_update_config_menu ;;
  *Themes*) present_terminal mistletoe-theme-update ;;
  *Process*) show_update_process_menu ;;
  *Hardware*) show_update_hardware_menu ;;
  *Firmware*) present_terminal mistletoe-update-firmware ;;
  *Timezone*) present_terminal mistletoe-tz-select ;;
  *Time*) present_terminal mistletoe-update-time ;;
  *Password*) show_update_password_menu ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "  Hypridle\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hypridle*) mistletoe-restart-hypridle ;;
  *Hyprsunset*) mistletoe-restart-hyprsunset ;;
  *Swayosd*) mistletoe-restart-swayosd ;;
  *Walker*) mistletoe-restart-walker ;;
  *Waybar*) mistletoe-restart-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_config_menu() {
  case $(menu "Use default config" "  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n󱣴  Plymouth\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hyprland*) present_terminal mistletoe-refresh-hyprland ;;
  *Hypridle*) present_terminal mistletoe-refresh-hypridle ;;
  *Hyprlock*) present_terminal mistletoe-refresh-hyprlock ;;
  *Hyprsunset*) present_terminal mistletoe-refresh-hyprsunset ;;
  *Plymouth*) present_terminal mistletoe-refresh-plymouth ;;
  *Swayosd*) present_terminal mistletoe-refresh-swayosd ;;
  *Walker*) present_terminal mistletoe-refresh-walker ;;
  *Waybar*) present_terminal mistletoe-refresh-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_hardware_menu() {
  case $(menu "Restart" "  Audio\n󱚾  Wi-Fi\n󰂯  Bluetooth") in
  *Audio*) present_terminal mistletoe-restart-pipewire ;;
  *Wi-Fi*) present_terminal mistletoe-restart-wifi ;;
  *Bluetooth*) present_terminal mistletoe-restart-bluetooth ;;
  *) show_update_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "  Drive Encryption\n  User") in
  *Drive*) present_terminal mistletoe-drive-set-password ;;
  *User*) present_terminal passwd ;;
  *) show_update_menu ;;
  esac
}

show_about() {
  mistletoe-launch-about
}

show_system_menu() {
  local options="  Lock\n󱄄  Screensaver"
  [ -f ~/.local/state/mistletoe/toggles/suspend-on ] && options="$options\n󰒲  Suspend"
  mistletoe-hibernation-available && options="$options\n󰤁  Hibernate"
  options="$options\n󰜉  Reboot\n󰐥  Shutdown"

  case $(menu "System" "$options") in
  *Lock*) mistletoe-lock-screen ;;
  *Screensaver*) mistletoe-launch-screensaver force ;;
  *Suspend*) systemctl suspend ;;
  *Hibernate*) systemctl hibernate ;;
  *Reboot*) mistletoe-cmd-reboot ;;
  *Shutdown*) mistletoe-cmd-shutdown ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰧑  Learn\n󱓞  Trigger\n  Style\n  Setup\n󰉉  Install\n󰭌  Remove\n  Update\n  About\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launch…" ;;
  *learn*) show_learn_menu ;;
  *trigger*) show_trigger_menu ;;
  *share*) show_share_menu ;;
  *capture*) show_capture_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *screenrecord*) show_screenrecord_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) show_about ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
