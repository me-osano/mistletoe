  *Go*) present_terminal "mistletoe-remove-dev-env go" ;;
  *PHP*) show_remove_php_menu ;;
  *Python*) present_terminal "mistletoe-remove-dev-env python" ;;
  *Elixir*) show_remove_elixir_menu ;;
  *Zig*) present_terminal "mistletoe-remove-dev-env zig" ;;
  *Rust*) present_terminal "mistletoe-remove-dev-env rust" ;;
  *Java*) present_terminal "mistletoe-remove-dev-env java" ;;
  *NET*) present_terminal "mistletoe-remove-dev-env dotnet" ;;
  *OCaml*) present_terminal "mistletoe-remove-dev-env ocaml" ;;
