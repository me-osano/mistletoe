show_remove_menu() {
  case $(menu "Remove" "󰣇  Package\n  Web App\n  TUI\n󰵮  Development\n󰏓  Preinstalls\n  Dictation\n󰸌  Theme\n󰍲  Fingerprint\n  Fido2") in
  *Package*) terminal mistletoe-pkg-remove ;;
  *Web*) present_terminal mistletoe-webapp-remove ;;
  *TUI*) present_terminal mistletoe-tui-remove ;;
  *Development*) show_remove_development_menu ;;
  *Preinstalls*) present_terminal mistletoe-remove-all ;;
  *Dictation*) present_terminal mistletoe-voxtype-remove ;;
  *Theme*) present_terminal mistletoe-theme-remove ;;
  *Fingerprint*) present_terminal "mistletoe-setup-fingerprint --remove" ;;
  *Fido2*) present_terminal "mistletoe-setup-fido2 --remove" ;;
  *Secureboot*) present_terminal "mistletoe-setup-secureboot --remove" ;;
  *Apparmor*) present_terminal "mistletoe-setup-apparmor --remove" ;;
  *) show_main_menu ;;
  esac
}

show_remove_development_menu() {
  case $(menu "Remove" "󰫏  Ruby on Rails\n  JavaScript\n  Go\n  PHP\n  Python\n  Elixir\n  Zig\n  Rust\n  Java\n  .NET\n  OCaml\n  Clojure") in
