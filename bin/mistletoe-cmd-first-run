#!/bin/bash

# Finish the installation of Mistletoe with items that can only be done after logging in.

set -e

FIRST_RUN_MODE=~/.local/state/mistletoe/first-run.mode

if [[ -f "$FIRST_RUN_MODE" ]]; then
  rm -f "$FIRST_RUN_MODE"

  bash "$MISTLETOE_PATH/install/first-run/battery-monitor.sh"
  bash "$MISTLETOE_PATH/install/first-run/firewall.sh"
  bash "$MISTLETOE_PATH/install/first-run/dns-resolver.sh"
  bash "$MISTLETOE_PATH/install/first-run/gnome-theme.sh"
  bash "$MISTLETOE_PATH/install/first-run/elephant.sh"
  sudo rm -f /etc/sudoers.d/first-run

  bash "$MISTLETOE_PATH/install/first-run/welcome.sh"
fi
