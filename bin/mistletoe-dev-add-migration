#!/bin/bash

# Creates a new Mistletoe migration named after the unix timestamp of the last commit.
# Only intended for Mistletoe developers.

cd ~/.local/share/mistletoe
migration_file="$HOME/.local/share/mistletoe/migrations/$(git log -1 --format=%cd --date=unix).sh"
touch $migration_file

if [[ "$1" != "--no-edit" ]]; then
  nvim $migration_file
fi

echo $migration_file
