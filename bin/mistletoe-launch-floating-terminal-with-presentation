#!/bin/bash

# Launch a floating terminal with the Mistletoe logo presentation, then execute the command passed in, and finally end with the mistletoe-show-done presentation.
# Used by actions such as Update System.

cmd="$*"
exec setsid uwsm-app -- xdg-terminal-exec --class=org.mistletoe.terminal --title=Mistletoe-terminal -e bash -c "mistletoe-show-logo; $cmd; if [ \$? -ne 130 ]; then mistletoe-show-done; fi"
