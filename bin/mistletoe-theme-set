#!/bin/bash

if [[ -z $1 ]]; then
  echo "Usage: mistletoe-theme-set <theme-name>"
  exit 1
fi

CURRENT_THEME_PATH="$HOME/.config/mistletoe/current/theme"
NEXT_THEME_PATH="$HOME/.config/mistletoe/current/next-theme"
USER_THEMES_PATH="$HOME/.config/mistletoe/themes"
MISTLETOE_THEMES_PATH="$MISTLETOE_PATH/themes"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')

if [[ -d "$USER_THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$USER_THEMES_PATH/$THEME_NAME"
elif [[ -d "$MISTLETOE_THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$MISTLETOE_THEMES_PATH/$THEME_NAME"
else
  echo "Theme '$THEME_NAME' does not exist"
  exit 1
fi

# Setup clean next theme directory (for atomic theme config swapping)
rm -rf "$NEXT_THEME_PATH"
mkdir -p "$NEXT_THEME_PATH"

# Copy static configs
cp -r "$THEME_PATH/"* "$NEXT_THEME_PATH/" 2>/dev/null

# Generate dynamic configs
mistletoe-theme-set-templates

# Swap next theme in as current
rm -rf "$CURRENT_THEME_PATH"
mv "$NEXT_THEME_PATH" "$CURRENT_THEME_PATH"

# Store theme name for reference
echo "$THEME_NAME" > "$HOME/.config/mistletoe/current/theme.name"

# Change background with theme
mistletoe-theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  mistletoe-restart-waybar
fi
mistletoe-restart-swayosd
mistletoe-restart-terminal
mistletoe-restart-hyprctl
mistletoe-restart-btop
mistletoe-restart-opencode
mistletoe-restart-mako

# Change app-specific themes
mistletoe-theme-set-gnome
mistletoe-theme-set-browser
mistletoe-theme-set-vscode
mistletoe-theme-set-obsidian
mistletoe-theme-set-asusctl
mistletoe-theme-set-neovim
mistletoe-theme-set-emacs

# Call hook on theme set
mistletoe-hook theme-set "$THEME_NAME"
