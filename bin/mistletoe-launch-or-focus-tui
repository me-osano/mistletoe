#!/bin/bash

# Launch or focus on a given TUI identified by the passed in as the command.
# Use by commands like mistletoe-launch-wifi to ensure there is only one wifi configuration screen open.

APP_ID="org.mistletoe.$(basename "$1")"
LAUNCH_COMMAND="mistletoe-launch-tui $@"

exec mistletoe-launch-or-focus "$APP_ID" "$LAUNCH_COMMAND"
