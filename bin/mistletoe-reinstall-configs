#!/bin/bash
set -e

# Overwrite all user configs with the Mistletoe defaults.

if [ "$EUID" -eq 0 ]; then
  echo "Error: This script should not be run as root"
  exit 1
fi

echo "Resetting all Mistletoe configs"
cp -R ~/.local/share/mistletoe/config/* ~/.config/
cp ~/.local/share/mistletoe/default/bashrc ~/.bashrc
echo '[[ -f ~/.bashrc ]] && . ~/.bashrc' | tee ~/.bash_profile >/dev/null

$(bash $MISTLETOE_PATH/install/config/theme.sh)

mistletoe-refresh-limine
mistletoe-refresh-plymouth
mistletoe-nvim-setup
