#!/bin/bash

# Overwrite the user config for the Plymouth drive decryption and boot sequence with the Mistletoe default and rebuild it.

sudo cp ~/.local/share/mistletoe/default/plymouth/* /usr/share/plymouth/themes/mistletoe/
sudo plymouth-set-default-theme mistletoe

if command -v limine-mkinitcpio &>/dev/null; then
  sudo limine-mkinitcpio
else
  sudo mkinitcpio -P
fi
