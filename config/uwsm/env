# Changes require a restart to take effect.

# Ensure Mistletoe bins are in the path
export MISTLETOE_PATH=$HOME/.local/share/mistletoe
export PATH=$MISTLETOE_PATH/bin:$PATH

# Set default terminal and editor
source ~/.config/uwsm/default

# Activate mise if present on the system
mistletoe-cmd-present mise && eval "$(mise activate bash)"
